<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.findbar.SingleOrNot"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <CheckBox
        android:id="@+id/pintPrice"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Low Price for Beer Pint"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:checked="false"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="51dp"
        app:layout_constraintBottom_toBottomOf="@+id/LessCrowded"
        android:layout_marginEnd="51dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="106dp"
        android:layout_marginBottom="108dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="51dp"
        android:layout_marginRight="51dp" />

    <CheckBox
        android:id="@+id/SingleGirls"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Places with most Single Girls"
        android:layout_marginStart="51dp"
        android:layout_marginEnd="51dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="51dp"
        android:layout_marginRight="51dp"
        android:checked="false"
        app:layout_constraintBottom_toBottomOf="@+id/SimilarToMe"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="39dp"
        app:layout_constraintTop_toTopOf="@+id/pintPrice" />

    <CheckBox
        android:id="@+id/SimilarToMe"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:text="Places similar to me"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/LessCrowded"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/pintPrice"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="35dp"
        android:checked="false"
        app:layout_constraintVertical_bias="0.333"
        app:layout_constraintRight_toRightOf="@+id/pintPrice"
        app:layout_constraintLeft_toLeftOf="@+id/pintPrice" />

    <CheckBox
        android:id="@+id/LessCrowded"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:text="Less Crowded"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        android:checked="false"
        app:layout_constraintVertical_bias="0.459"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/SimilarToMe"
        app:layout_constraintLeft_toLeftOf="@+id/SimilarToMe" />

    <Button
        android:id="@+id/Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:onClick="insertUserDetails"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/LessCrowded"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
